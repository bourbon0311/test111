<div class="container">
<div class="row">
<div class="col-xs-3">
<%= render 'users/form', user: @user, book: @book %>
</div>

<div class="col-xs-9">
<table class="table table-striped">

<h1>Book detail</h1>
	<tr>
	    <td><%= link_to user_path(@user) do %>
			<%= attachment_image_tag @user, :profile_image,:fill,60,60,format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
			<%= @book.user.name %></td><% end %>

		<td><%= link_to @book.title %></td>
		<td></td>
		<td><%= @book.body %></td>

		<% if @user.id == current_user.id %>
		<td><div><%= link_to "Edit", edit_book_path(@book.id), class: "btn-success btn-sm" %></div></td>

		<td><div><%= link_to "Destroy", book_path(@book.id), method: :delete, data: { confirm: '削除しますか？' }, class: "btn-danger btn-sm"%></div></td>
	</tr>
    <% end %>
</table>
</div>
</div>
</div>
</div>