<div class="container">
<div class="row">
<div class="col-xs-3">
<%= render 'users/form', user: @user, book: @book %>
</div>
<div class="col-xs-9">
  <table class="table table-striped">
<h1>Books</h1>
	<thead>
		<tr><th></th>
			<th>Title</th>
			<th>Opinion</th>
        </tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= link_to user_path(book.user) do %>
				<%= attachment_image_tag book.user, :profile_image,:fill,30,30,format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %>
				<% end %>
			</td>
			<td>

				<p><%= link_to book.title,book_path(book.id) %></p>
			</td>
			<td>
				<p><%= book.body %></p>
			</td>
	  </tr>
	  <% end %>
      </tbody>
    </table>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
