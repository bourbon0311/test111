<div class="container">
<div class="row">
<div class="col-xs-3">
<%= render 'users/form', user: @user, book: @book %>
</div>
<p><%= flash[:notice] %></p>
<div class="col-xs-9">
  <table class="table table-striped">
<h1>Users</h1>

<thead>
	<tr>
		<th>image</th>
		<th>name</th>
    </tr>
</thead>
<tbody>
		<% @users.each do |user| %>
			<tr>
				<td>
					<%= attachment_image_tag user, :profile_image,:fill,30,30,format: 'jpeg', fallback: "no_image.jpg", size: "40x40" %>
				</td>
				<td>
					<p><%= user.name %></p>
				</td>
				<td>
					<p><%= link_to "Show",user_path(user.id) %></p>
				</td>
				<td>
			  	</td>
		  	</tr>
		<% end %>
	</tbody>
</table>
</div>
</div>
</div>
</div>
</div>