<div class="container">
<h1>User info</h1>
<p><%= flash[:notice] %></p>
<%= form_for (@user) do |f| %>
	<% if @user.errors.any? %>
		<%= @user.errors.count %>件のerrorが発生しました<br>
		<% @user.errors.full_messages.each do |msg| %>
			<%= msg %><br>
		<% end %>
	    <% end %>
<h4>Name</h4>
<%= f.text_field :name %>
<h4>image</h4>
<%= f.attachment_field :profile_image %>
<h4>Introduction</h4>
<%= f.text_area :introduction %>
<p>
<input type="submit" value="Update User"></p>
<% end %>