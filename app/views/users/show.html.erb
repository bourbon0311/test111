<div class="container">
<div class="row">
<div class="col-xs-3">
<%= render 'users/form', user: @user, book: @book %>
</div>
<p><%= flash[:notice] %></p>
	<div class="col-xs-9">
  <table class="table table-striped">
	<thead>
		<h3>Books</h3>
		<tr><th></th>
			<th>Title</th>
			<th>Opinion</th>
        </tr>
	</thead>

	<tbody>
		<% @books.each do |book| %>
		<tr>
			<td>
				<%= attachment_image_tag @users, :profile_image,:fill,60,60,format: 'jpeg', fallback: "no_image.jpg",size: "40x40" %>
			</td>
			<td>

				<p><%= link_to book.title,book_path(book.id) %></p>
			</td>
			<td>
				<p><%= book.body %></p>
				</td>
			</td>
	  </tr>
	  <% end %>
      </tbody>
    </table>
</div>
</div>
</div>
</div>
</div>
</div>
